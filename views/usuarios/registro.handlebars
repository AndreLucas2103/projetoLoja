<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.13.1/dist/sweetalert2.all.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script src="/js/loja-js/registro/registrar.js"></script>



<div class="w-full flex flex-wrap">
    <!-- Register Section -->
    <div class="w-full md:w-1/2 flex flex-col">
        <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
            <p class="text-center text-3xl pt-4">Registrar-se</p>
            <form class="flex flex-col pt-3 md:pt-1" id="form-registrar" action="/registrar" method="POST">
                <div class="flex flex-wrap -mx-2 mt-4 space-y-4 md:space-y-0">
                    <div class="w-full px-2 md:w-1/2">
                        <label for="primeiroNome" class="text-lg">Primeiro nome *</label>
                        <input required type="text" id="primeiroNome" name="primeiroNome" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                    </div>
                    <div class="w-full px-2 md:w-1/2">
                        <label for="segundoNome" class="text-lg">Segundo nome *</label>
                        <input required type="text" id="segundoNome" name="segundoNome"  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                    </div>
                </div>

                <div class="flex flex-col pt-4">
                    <label for="email" class="text-lg">E-mail *</label>
                    <input required type="email" id="email" name="email"  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                </div>

                <div class="flex flex-col pt-4">
                    <label for="cpf" class="text-lg">CPF *</label>
                    <input required type="text" id="cpf" name="cpf"  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                </div>

                <div class="flex flex-wrap -mx-2 mt-4 space-y-4 md:space-y-0">
                    
                    <div class=" text-center">
                        <div class="hidden bg-gray-500 border-0 ml-3 z-50 font-normal leading-normal text-sm max-w-xs text-left no-underline break-words rounded-lg" id="popover-id">
                            <div class="text-white p-3">
                            A senha deve possuir pelo menos 6 caracteres!
                            </div>
                        </div>
                    </div>
                      
                    <div class="w-full px-2 md:w-1/2">
                        <label for="senha" class="text-lg">Senha * <span class="float-right	" type="button" style="transition:all .15s ease" onmouseenter="openPopover(event,'popover-id')" onmouseleave="openPopover(event,'popover-id')"><i class="fas fa-info-circle" style="color: rgb(18, 18, 160); font-size: small"></i></span></label>
                    <input required type="password" id="senha" name="senha" autocomplete="" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                    </div>
                    <div class="w-full px-2 md:w-1/2">
                        <label for="confirmarSenha" class="text-lg">Confirmar senha *</label>
                    <input required type="password" id="confirmarSenha" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline">
                    </div>
                </div>
                
                <input type="text" name="number" id="numberVerificacao" hidden readonly>
                
                <input type="submit" value="Registrar" class="bg-red-500 text-white font-bold text-lg hover:bg-red-700 p-2 mt-8">
            </form>
            <div class="text-center pt-6 pb-6">
                <p>JÃ¡ tem uma conta? <a href="/login" class="underline font-semibold">Entre aqui</a></p>
            </div>
        </div>
    </div>

    <!-- Image Section -->
    <div class="w-1/2 shadow-2xl">
        <img class="object-cover w-full h-screen hidden md:block" src="/img/logo-loja/login-registro/logo-login-registo.jpg">
    </div>
</div>



<script>
    onload = registrarFront()

    $('#cpf').mask('000.000.000-00')
    
    function openPopover(event,popoverID){
      let element = event.target;
      while(element.nodeName !== "SPAN"){
        element = element.parentNode;
      }
      var popper = new Popper(element, document.getElementById(popoverID), {
        placement: 'right'
      });
      document.getElementById(popoverID).classList.toggle("hidden");
    }
</script>
