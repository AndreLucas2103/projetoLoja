<div class="lg:flex">
    <div class="lg:w-1/2 xl:max-w-screen-sm">
        <div class="mt-12 px-12 sm:px-24 md:px-48 lg:px-12 lg:mt-16 xl:px-24 xl:max-w-2xl">
            <h2 class="text-center text-4xl text-red-900 font-display font-semibold lg:text-left xl:text-5xl
            xl:text-bold uppercase ">{{dadosLoja.nomeLoja}}</h2>
            <p class="text-center text-red-900 font-display font-semibold lg:text-left text-3xl	mt-4">Entrar</p>
            <div class="mt-12">
                <form action="/login" method="post">
                    <div>
                        <div class="text-sm font-bold text-gray-700 tracking-wide">Enderço de email</div>
                        <input type="text" name="email" class="w-full text-lg py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="" placeholder="mike@gmail.com">
                    </div>
                    <div class="mt-8">
                        <div class="flex justify-between items-center">
                            <div class="text-sm font-bold text-gray-700 tracking-wide">
                                Senha
                            </div>
                            <div>
                                <a class="text-xs font-display font-semibold text-indigo-600 hover:text-indigo-800
                                cursor-pointer">
                                    Esqueceu a senha?
                                </a>
                            </div>
                        </div>
                        <input type="password" name="senha" class="w-full text-lg py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500" type="" placeholder="">
                    </div>
                    <div class="mt-10">
                        <button class="bg-red-500 text-gray-100 p-4 w-full rounded-full tracking-wide
                        font-semibold font-display focus:outline-none focus:shadow-outline hover:bg-red-700
                        shadow-lg">
                            Entrar
                        </button>
                    </div>
                </form>
                <div class="mt-12 text-sm font-display font-semibold text-gray-700 text-center">
                    Não possui conta ? <a href="/registro" class="cursor-pointer text-indigo-600 hover:text-indigo-800">Registrar-se</a>
                </div>
            </div>
        </div>
    </div>
    <div class="hidden lg:flex items-center justify-center bg-white flex-1 h-screen">
        <div class="max-w-xs transform duration-200 hover:scale-110 cursor-pointer">
            <img src="/img/logo-loja/login-registro/logo-login-registo.jpg" alt="">
        </div>
    </div>
</div>

