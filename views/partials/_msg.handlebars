<style>
.font-title-notificacao {
    color: white;
    font-family: monospace;
}
</style>

{{#if success_msg}}
    <script>
        $(document).ready(()=>{    
            Swal.fire({
                toast: true,
                title: '{{success_msg}}',
                position: 'bottom-right',
                background: "#20853b",
                showConfirmButton: false,
                showCloseButton: true,
                timer: 5000,
                timerProgressBar: true,
                customClass: {
                    title: 'font-title-notificacao',                              
                }
            })
        })
    </script>
{{/if}}

